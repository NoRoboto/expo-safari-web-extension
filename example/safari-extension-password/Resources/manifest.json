{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__", 
  "version": "1.5.2",
  "default_locale": "en",
  
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js", "js/form-detector.js"],
      "css": ["css/inject.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "contextMenus"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_browserActionTitle__",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png", 
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png", 
    "128": "icons/icon-128.png"
  },
  
  "commands": {
    "fill-form": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "__MSG_fillFormCommand__"
    },
    "generate-password": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "__MSG_generatePasswordCommand__"
    }
  },
  
  "web_accessible_resources": [
    "css/*",
    "js/injected.js"
  ]
}