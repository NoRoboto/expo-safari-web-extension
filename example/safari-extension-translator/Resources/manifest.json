{
  "manifest_version": 2,
  "name": "QuickTranslate",
  "description": "Instant text translation with multiple language support",
  "version": "3.2.1",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "translator-core.js"],
      "css": ["translator-ui.css"],
      "run_at": "document_end"
    }
  ],
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "https://api.mymemory.translated.net/*",
    "https://translate.googleapis.com/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "QuickTranslate",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Translate selected text"
    }
  },
  
  "web_accessible_resources": [
    "workers/*",
    "config/*",
    "assets/*"
  ]
}